<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.dashboard.MainActivity">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:navGraph="@navigation/main_navigation"
        tools:ignore="FragmentTagUsage" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="4dp"
        app:itemIconTint="@drawable/custom_bottom_navbar"
        app:itemRippleColor="@color/transparent"
        app:itemTextAppearanceActive="@style/BottomNavigationLabelStyle"
        app:itemTextAppearanceInactive="@style/BottomNavigationLabelStyle"
        app:itemTextColor="@drawable/custom_bottom_navbar"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_navbar_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_change_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_fab"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:elevation="0dp"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/fab_checkout"
        app:layout_constraintEnd_toEndOf="@+id/fab_checkout"
        app:layout_constraintStart_toStartOf="@+id/fab_checkout"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/icons_change_stock"
        app:tint="@color/blue" />

    <TextView
        android:id="@+id/tv_change_stock"
        style="@style/textStyleMedium_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:background="@drawable/custom_fab_desc"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="@string/change_stock"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_change_stock"
        app:layout_constraintEnd_toStartOf="@+id/fab_change_stock"
        app:layout_constraintTop_toTopOf="@+id/fab_change_stock" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_fab"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:elevation="0dp"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/fab_checkin"
        app:layout_constraintEnd_toEndOf="@+id/fab_checkin"
        app:layout_constraintStart_toStartOf="@+id/fab_checkin"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/icons_arrow_right"
        app:tint="@color/blue" />

    <TextView
        android:id="@+id/tv_checkout"
        style="@style/textStyleMedium_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_fab_desc"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="@string/checkout_visitor"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_checkout"
        app:layout_constraintEnd_toStartOf="@+id/fab_checkout"
        app:layout_constraintTop_toTopOf="@+id/fab_checkout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_fab"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:elevation="0dp"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/fab_add_booking"
        app:layout_constraintEnd_toEndOf="@+id/fab_add_booking"
        app:layout_constraintStart_toStartOf="@+id/fab_add_booking"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/icons_arrow_right"
        app:tint="@color/blue" />

    <TextView
        android:id="@+id/tv_checkin"
        style="@style/textStyleMedium_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_fab_desc"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="@string/checkin_visitor"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_checkin"
        app:layout_constraintEnd_toStartOf="@+id/fab_checkin"
        app:layout_constraintTop_toTopOf="@+id/fab_checkin" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_fab"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:elevation="0dp"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/fab_menu"
        app:layout_constraintEnd_toEndOf="@+id/fab_menu"
        app:layout_constraintStart_toStartOf="@+id/fab_menu"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/icons_edit"
        app:tint="@color/blue" />


    <TextView
        android:id="@+id/tv_add_booking"
        style="@style/textStyleMedium_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_fab_desc"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="Tambah Booking"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/fab_add_booking"
        app:layout_constraintEnd_toStartOf="@+id/fab_add_booking"
        app:layout_constraintTop_toTopOf="@+id/fab_add_booking" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/blue"
        android:clickable="true"
        android:focusable="true"
        app:elevation="0dp"
        app:fabCustomSize="60dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/icons_add"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>